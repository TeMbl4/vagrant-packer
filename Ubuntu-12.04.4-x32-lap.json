{
  "variables": {
        "ssh_name": "vagrant",
        "ssh_pass": "vagrant",
        "hostname": "precise"
  },
  "builders": [{
    "type": "virtualbox-iso",
    "virtualbox_version_file": ".vbox_version",
    "headless": false,

    "guest_os_type": "Ubuntu",
    "disk_size": 20480,

    "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.4-server-i386.iso",
    "iso_checksum": "3bae12e315c89d42d7bf571e4e35efce585c7624",
    "iso_checksum_type": "sha1",

    "http_directory": "http",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

    "ssh_username": "{{user `ssh_name`}}",
    "ssh_password": "{{user `ssh_pass`}}",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s",

    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ],

    "shutdown_command": "echo '{{user `ssh_name`}}'|sudo -S /sbin/halt -h -p"
  }],
  "post-processors": [{
    "output": "build/Ubuntu-12.04.4-x32-lap.box",
    "type": "vagrant"
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/ubuntu12-lap/vboxguest.sh",
      "scripts/ubuntu12-lap/vagrant.sh",
      "scripts/ubuntu12-lap/apache.sh",
      "scripts/ubuntu12-lap/compact.sh"
    ]
  }]
}
